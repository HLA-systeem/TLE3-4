<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9370DB">


    <Button
        android:id="@+id/actButt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:background="#FFFFF0"
        android:onClick="findAct"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Search for activities \nto pass the time"
        android:textSize="10sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:orientation="horizontal"
        android:id="@+id/layout_waiters"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </RelativeLayout>

    <TextView
        android:id="@+id/text_tillNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="TextView"
        android:textColor="#FFFFF0"
        />

    <TextView
        android:id="@+id/text_totalWaitTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="11dp"
        android:textColor="#FFFFF0"
        android:text="TextView" />

    <TextView
        android:id="@+id/text_flightStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/actButt"
        android:layout_alignEnd="@+id/text_tillNext"
        android:layout_alignLeft="@+id/text_totalWaitTime"
        android:layout_alignRight="@+id/text_tillNext"
        android:layout_alignStart="@+id/text_totalWaitTime"
        android:layout_alignTop="@+id/actButt"
        android:textColor="#FFFFF0"
        android:text="TextView" />

</RelativeLayout>
