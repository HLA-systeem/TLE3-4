<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_activieties"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="nl.hr.tle4_mobile.ActivietiesActivity">

    <TextView
            android:text="Neaby activities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" android:id="@+id/activities" android:textSize="24sp"/>
    <TextView
            android:text="Call a taxi while waiting for your luggage?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/activities"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:layout_marginLeft="14dp" android:layout_marginStart="14dp" android:layout_marginTop="35dp"
            android:id="@+id/taxi" android:textSize="18sp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp" android:id="@+id/taxiButt" android:layout_below="@+id/taxi"
            android:layout_centerHorizontal="true" android:background="@android:drawable/ic_menu_call"
            android:backgroundTint="@android:color/black" android:onClick="callTaxi" android:visibility="visible"
            android:elevation="24dp"/>
    <TextView
            android:text="Take a virtual reality tour of your destination at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/taxiButt"
            android:layout_centerHorizontal="true" android:layout_marginTop="51dp" android:id="@+id/vr_tour"
            android:textSize="18sp"/>
</RelativeLayout>
